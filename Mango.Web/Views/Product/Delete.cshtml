@model ProductDto
<form asp-action="Delete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Product</h1>
        <input asp-for="@Model.ProductId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Product name</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Name" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Description" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input disabled asp-for="Price" class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>
